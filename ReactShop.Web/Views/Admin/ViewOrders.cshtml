@using System.Web.Optimization

@model List<ReactShop.Core.DTOs.OrderDTO>

@{
    ViewBag.Title = "View Orders";
}

@Scripts.Render(" ~/bundles/js")

@Html.ReactInitJavaScript()

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-9">
                <h3>
                    Admin - View Orders
                </h3>
            </div>

        </div>
    </div>
</div>
<p></p>

<div>
    <table class="table table-striped">
        <tr class="media-heading">
            <td>
                Order ID
            </td>
            <td>
                Date Created
            </td>
            <td>
                Customer ID
            </td>
            <td>
                Customer Name
            </td>
            <td>
                Status
            </td>
            <td>
                Total Price
            </td>
        </tr>
        
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.DatePlaced
                </td>
                <td>
                    @order.CustomerId
                </td>
                <td>
                    @order.CustomerName
                </td>
                <td>
                    @order.Status.ToString()
                </td>
                <td>
                    @order.TotalPrice
                </td>
            </tr>
        }
    </table>
      

</div>
