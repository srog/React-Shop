@using System.Web.Optimization
@model ReactShop.Core.DTOs.CheckoutConfirmDetailsDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Confirm Checkout";
}

@functions{
    public string TokenHeaderValue()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}

@Html.React("CheckoutConfirmView", new
{
    title = "React JS.Net + React-Bootstrap",
    model = Model,
    TokenHeaderValue = TokenHeaderValue(),
    urlCart = @Url.Action("Cart", "Home"),
    urlCheckoutSuccess = @Url.Action("CheckoutSuccess", "Home")
})

@Scripts.Render(" ~/bundles/js")

@Html.ReactInitJavaScript()